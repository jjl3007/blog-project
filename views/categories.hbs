<div class="row">
    <div class="col-md-12">
        <h2>Posts</h2>
        <hr>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
        {{#unless posts}}
        <strong>{{message}}</strong>
        {{/unless}}
    </div>
</div>
